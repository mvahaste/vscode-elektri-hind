{
	"name": "elektri-hind",
	"displayName": "Elektri hind",
	"description": "Jälgi laivis elektri hinda (€/kWh)",
	"version": "1.2.1",
	"publisher": "mvahaste",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/mvahaste/vscode-elektri-hind.git"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Elektri hind",
			"properties": {
				"elektri-hind.decimalPointsStatusBar": {
					"type": "integer",
					"default": 2,
					"maximum": 5,
					"minimum": 1,
					"description": "How many decimal points to show in the status bar."
				},
				"elektri-hind.decimalPointsTooltip": {
					"type": "integer",
					"default": 5,
					"maximum": 9,
					"minimum": 1,
					"description": "How many decimal points to show in the tooltip."
				},
				"elektri-hind.alignment": {
					"type": "string",
					"default": "right",
					"enum": [
						"left",
						"right"
					],
					"description": "Where the status bar item is located."
				},
				"elektri-hind.alignmentPriority": {
					"type": "integer",
					"default": 9999,
					"minimum": 0,
					"maximum": 9999,
					"description": "Priority of the status bar item alignment."
				}
			}
		},
		"commands": [
			{
				"command": "elektri-hind.reload",
				"title": "Reload Elektri hind"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"node-fetch": "^2.6.7"
	}
}
